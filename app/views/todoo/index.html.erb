<div class="reading">
	<div class="page-header text-center">
		<h1>Reading List</h1>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>Books to read</h2>

				<% if @todos.empty? %>

				<a href="https://twitter.com/intent/tweet?button_hashtag=ReadingChallenge2015&text=I%20finished%20the%202015%20Reading%20Challenge!" class="twitter-hashtag-button" data-related="superandomness" data-url="http://readingchallenge2015.herokuapp.com">Tweet #ReadingChallenge2015</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
				</script>

				<%end%>

				<% @todos.each do |t|%>
				<p>

					<strong><%= t.name%></strong>
					<small><%= link_to "Mark as Done", todoo_path(t), :method => :put %></small>

				</p>

				<%end%>
			</div>
			<div class="col-md-6">
				<h2>Finished reading</h2>

				<% if @todone.empty? %>
				<p> You've accomplished nothing. Get reading! </p>
				<%end%>

				<% @todone.each do |t|%>
				<p>
					<%= t.name%>
					<small><%= link_to "Unmark as Done", todoo_path(t), :confirm => "is it ok to remove this from the list?", :method => :delete %></small>
				</p>

				<%end%>
			</div>
		</div>
	</div>
</div>
